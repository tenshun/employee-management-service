<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="com.tenshun.employeemanagement.domain.User" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.Authority" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.social.SocialUserConnection" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.Region" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.Country" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.Location" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.Department" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.Department.employees" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.Task" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.Task.jobs" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.Employee" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.Employee.jobs" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.Job" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.Job.tasks" uses-template="simple"/>

    <cache alias="com.tenshun.employeemanagement.domain.JobHistory" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
